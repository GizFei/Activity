<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.giz.interaction">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/interaction_ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/interaction_ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".send.SendImplicitIntentActivity" />
        <activity android:name=".receive.ReceiveImplicitIntentActivity">
            <!-- 指定显示在“选择应用”列表中的图标 -->
            <intent-filter android:icon="@drawable/ic_receive">
                <action android:name="android.intent.action.SEND" />
                <data android:mimeType="text/plain" />
                <data android:mimeType="image/*" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

    </application>

</manifest>