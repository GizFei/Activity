    package="com.giz.fragment">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/fragment_ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/fragment_ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".lifecycle.PrintLifecycleFragmentActivity" />
        <activity android:name=".lifecycle.FragmentLifecycleMainActivity" />
        <activity android:name=".example.FragmentLayoutActivity" />
        <activity android:name=".example.FragmentLayoutActivity$DetailsActivity" />
        <activity android:name=".transaction.ManageBackStackActivity" />
        <activity android:name=".transition.FragmentTransitionByAnimActivity" />
        <activity android:name=".transition.FragmentTransitionActivity" />
        <activity android:name=".transition.FragmentSharedElementActivity" />

    </application>

</manifest>